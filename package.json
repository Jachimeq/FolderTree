{
  "name": "foldertree-pro",
  "private": true,
  "version": "2.0.0",
  "description": "Professional folder structure generator with AI-powered classification and collaboration features",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "npm-run-all -p dev:backend dev:frontend",
    "dev:backend": "npm --workspace backend run dev",
    "dev:frontend": "npm --workspace frontend run dev",
    "build": "npm-run-all build:backend build:frontend",
    "build:backend": "npm --workspace backend run build",
    "build:frontend": "npm --workspace frontend run build",
    "start": "npm-run-all -p start:backend start:frontend",
    "start:backend": "npm --workspace backend run start",
    "start:frontend": "npm --workspace frontend run preview",
    "test": "npm-run-all test:backend test:frontend",
    "test:backend": "npm --workspace backend run test",
    "test:frontend": "npm --workspace frontend run test",
    "typecheck": "npm-run-all typecheck:backend typecheck:frontend",
    "typecheck:backend": "npm --workspace backend run typecheck",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "desktop:dev": "npm --workspace frontend run desktop:dev",
    "desktop:build": "npm --workspace frontend run desktop:build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}